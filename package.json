    "@types/wicg-file-system-access": "^2023.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/browser": "^3.0.2",
    "@vitest/ui": "^3.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
