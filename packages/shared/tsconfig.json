{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "*.d.ts",
        "src/**/*",
        "./types/*.d.ts",
        "src/**/*.vue",
        "src/**/*.json",
        "test/**/*.spec.ts",
        "../../globals.d.ts"
    ],
    "compilerOptions": {
        "noEmit": false,
        "moduleResolution": "Bundler",

        "verbatimModuleSyntax": true,
        "lib": ["DOM", "ESNext"],

        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "types": ["vite/client", "vue-i18n", "@types/dom-webcodecs"]
    }
}
