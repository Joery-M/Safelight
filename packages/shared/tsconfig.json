{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "*.d.ts",
        "src/**/*",
        "types/*.d.ts",
        "src/**/*.vue",
        "src/**/*.json",
        "../../globals.d.ts"
    ],
    "compilerOptions": {
        "noEmit": false,
        "moduleResolution": "Bundler",

        "verbatimModuleSyntax": true,
        "lib": ["DOM", "ESNext"],

        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,

        "types": ["vite/client"]
    }
}
