{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["*.d.ts", "src/**/*", "types/*.d.ts", "src/**/*.vue", "src/**/*.json"],
    "compilerOptions": {
        "noEmit": false,
        "moduleResolution": "Bundler",

        "verbatimModuleSyntax": true,
        "lib": ["DOM", "ESNext"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "$/*": ["./public/*"]
        },
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}
