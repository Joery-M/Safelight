{
    "include": ["vite.config.ts", "vitest.config.ts", "./tools/**/*.ts", "./tests/**/*.ts", "."],
    "compilerOptions": {
        "lib": ["es2023", "ESNext"],
        "module": "ESNext",
        "target": "ESNext",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "moduleResolution": "Bundler",
        "types": ["@types/node", "vite/client", "vitest/globals"]
    }
}
