{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "outDir": "dist",
        "declaration": true,
        "types": ["vite/client"]
    },
    "files": ["src/*"],
    "exclude": ["dist"]
}
