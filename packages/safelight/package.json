        "generate-package-list": "tsx ./buildscripts/generatePackageList.ts",
        "generate-all": "pnpm \"/^(generate-(?!all).*)/\"",
        "build": "pnpm \"/^(generate-(?!all).*|type-check)/\" && pnpm build-only",
