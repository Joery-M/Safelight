{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "*.d.ts",
        "./types/**/*.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/**/*.json",
        "tsconfig.worker.json"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "noEmit": false,

        "verbatimModuleSyntax": true,
        "lib": ["DOM", "ESNext"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        },
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}