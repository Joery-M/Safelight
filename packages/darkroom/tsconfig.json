{
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "types": ["vite/client"],
        "rootDir": "."
    },
    "files": ["lib/main.ts"],
    "include": ["lib/*.ts", "tsconfig.shim.json", "../../globals.d.ts"],
    "exclude": ["dist", "vite.config.ts"],
    "references": [
        {
            "path": "./tsconfig.node.json"
        },
        {
            "path": "./tsconfig.shim.json"
        }
    ]
}
