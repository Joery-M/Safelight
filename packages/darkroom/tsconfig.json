{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedDeclarations": true,
        "module": "ESNext",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "rootDir": "."
    },
    "include": ["./src/*.ts", "tsconfig.shim.json", "../../globals.d.ts", "./types/resolve.d.ts"],
    "exclude": ["dist", "vite.config.ts"],
    "references": [
        {
            "path": "./tsconfig.shim.json"
        }
    ]
}
