{
  "name": "@safelight/sl-core",
  "version": "0.1.0",
  "files": [
    "src"
  ],
  "type": "module",
  "license": "MIT",
  "scripts": {
    "precompile": "rimraf ./src/binding",
    "precompile:release": "rimraf ./src/binding",
    "compile": "cd ../../crates/sl-binding && wasm-pack build -t web --out-dir ../../packages/sl-core/src/binding/  --no-pack --no-opt --dev",
    "compile:release": "cd ../../crates/sl-binding && wasm-pack build -t web --out-dir ../../packages/sl-core/src/binding/ --no-pack --release",
    "build": "pnpm run compile && tsdown",
    "build:release": "pnpm run compile:release && tsdown"
  },
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./sl_binding.wasm": {
      "development": "./src/binding/sl_binding_bg.wasm",
      "default": "./dist/sl_binding_bg.wasm"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "rimraf": "^6.1.2",
    "tsdown": "0.19.0-beta.4"
  }
}
