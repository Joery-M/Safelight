{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/prettierrc.json",
    "plugins": ["joery-prettier-plugin-unocss"],
    "semi": true,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "**/package.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/.github/workflows/**/*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
