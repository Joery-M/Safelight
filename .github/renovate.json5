{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    enabledManagers: ['npm', 'github-actions'],
    labels: ['dependencies'],
    extends: ['config:recommended', 'group:allNonMajor'],
    schedule: ['every weekend'],
    rangeStrategy: 'bump',
    postUpdateOptions: ['pnpmDedupe'],
    packageRules: [
        {
            extends: ['packages:vite'],
            matchPackageNames: [
                '@quantco/pnpm-licenses',
                '@rollup/**',
                'pkgroll',
                'premove',
                'rolldown',
                'rollup',
                'sass-embedded',
                'typescript',
                'unocss',
                'vue-tsc'
            ],
            automerge: true,
            groupName: 'build'
        },
        {
            extends: ['packages:test', 'monorepo:vitest', 'monorepo:playwright'],
            matchPackageNames: ['fake-indexeddb', 'happy-dom', 'jsdom', 'playwright'],
            automerge: true,
            groupName: 'testing'
        },
        {
            matchPackageNames: ['primevue', '@primevue/**', '@primeuix/**'],
            groupName: 'PrimeVue'
        },
        {
            extends: ['monorepo:vue', 'monorepo:vueuse'],
            matchPackageNames: ['vue-**', '@vue/**'],
            automerge: true,
            groupName: 'vue'
        },
        {
            extends: ['packages:linters'],
            matchPackageNames: ['@intlify/eslint-plugin-vue-i18n'],
            automerge: true,
            groupName: 'linters'
        },
        {
            matchManagers: ['github-actions'],
            automerge: true,
            groupName: 'ci'
        }
    ],
    ignoreDeps: ['pnpm']
}
