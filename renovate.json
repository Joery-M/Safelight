{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["npm"],
    "extends": ["config:recommended"],
    "schedule": ["every weekend"],
    "rangeStrategy": "bump",
    "packageRules": [
        {
            "matchPackageNames": [
                "vite",
                "**vite-plugin**",
                "@vitejs/**",
                "rollup",
                "@rollup/**",
                "vue-tsc"
            ],
            "groupName": "Build",
            "groupSlug": "build"
        },
        {
            "extends": ["packages:test", "monorepo:vitest", "monorepo:playwright"],
            "matchPackageNames": [
                "vitest",
                "playwright",
                "jsdom",
                "happy-dom",
                "@vitest/**",
                "@intlify/eslint-plugin-vue-i18n"
            ],
            "groupName": "Testing",
            "groupSlug": "testing"
        },
        {
            "matchPackageNames": ["primevue", "@primevue/**"],
            "groupName": "PrimeVue",
            "groupSlug": "primevue"
        },
        {
            "matchPackageNames": ["vue-**", "vue", "@vueuse/**", "@vue/**", "unplugin-vue-router"],
            "groupName": "Vue",
            "groupSlug": "vue"
        },
        {
            "extends": ["packages:linters"],
            "groupName": "linters",
            "groupSlug": "linters"
        },
        {
            "matchPackagePatterns": ["*"],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "All non-major dependencies",
            "groupSlug": "all-minor-patch"
        }
    ],
    "ignoreDeps": ["pnpm"]
}
